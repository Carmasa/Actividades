<Window x:Class="ProyectoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="8" Background="#FFBBBF70">
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <TextBlock Text="Servicio a la carta" 
                Foreground="#FF313131" FontWeight="Bold" FontSize="38"
                VerticalAlignment="Top" HorizontalAlignment="Left" FontFamily="Gabriola" Height="50" Width="226" Margin="293,-4,0,0"/>
        </Border>
        <Image Grid.Column="2" Grid.ColumnSpan="4" Margin="32,5,46,25" Grid.RowSpan="3" Grid.Row="1" Source="/Menu.jpg" Stretch="Fill"/>
        <Button x:Name="btnCarnes" Click="btnCarnes_Click" Grid.Column="2" Grid.Row="3" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="86" Margin="0,38,0,0">
            <Image Source="/carnes.png" Stretch="Uniform"/>
        </Button>
        <Button Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="86" Margin="50,38,0,0">
            <Image Source="/pescado.png" Stretch="Uniform"/>
        </Button>
        <Button Grid.Column="5" Grid.Row="3" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="86" Margin="0,38,0,0">
            <Image Source="/vegano.png" Stretch="Uniform"/>
        </Button>
        <Button Grid.Column="2" Grid.Row="5" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="86">
            <Image Source="/postres.png" Stretch="Uniform"/>
        </Button>
        <Button Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="86" Margin="50,0,0,0">
            <Image Source="/vinos.png" Stretch="Uniform"/>
        </Button>
        <Button Grid.Column="5" Grid.Row="5" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="86">
            <Image Source="/especialidades.png" Stretch="Uniform"/>
        </Button>

        <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="8" Background="#FFB6B79E" Margin="0,36,0,0">

            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <TextBlock Text="" 
                       Foreground="#FF313131" FontWeight="Bold" FontSize="38"
                       VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Gabriola"/>
        </Border>
        <Image Grid.Column="2" Stretch="Uniform" Grid.Row="7" Source="/redes.png" Grid.ColumnSpan="4" Margin="82,20,68,15"/>
        <TextBlock 
            Foreground="#FF313131" FontWeight="Bold" FontSize="16"
            VerticalAlignment="Top" HorizontalAlignment="Left" FontFamily="Gabriola" Grid.ColumnSpan="2" Margin="50,43,0,0" Height="21" Width="65"><Run Language="es-es" Text="Inicio"/></TextBlock>
        <TextBlock 
            Foreground="#FF313131" FontWeight="Bold" FontSize="16"
            VerticalAlignment="Top" HorizontalAlignment="Left" FontFamily="Gabriola" Margin="26,43,0,0" Height="21" Width="64" Grid.Column="1"><Run Language="es-es" Text="Ofertas"/></TextBlock>
        <TextBlock 
            Foreground="#FF313131" FontWeight="Bold" FontSize="16"
            VerticalAlignment="Top" HorizontalAlignment="Left" FontFamily="Gabriola" Margin="0,43,0,0" Height="21" Width="64" Grid.Column="2"><Run Language="es-es" Text="Destacados"/></TextBlock>
        <TextBlock 
            Foreground="#FF313131" FontWeight="Bold" FontSize="16"
            VerticalAlignment="Top" HorizontalAlignment="Left" FontFamily="Gabriola" Margin="82,43,0,0" Height="21" Width="64" Grid.Column="2" Grid.ColumnSpan="2"><Run Language="es-es" Text="Novedades"/></TextBlock>
        <TextBlock 
            Foreground="#FF313131" FontWeight="Bold" FontSize="16"
            VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Gabriola" Margin="0,43,0,0" Height="21" Width="64" Grid.Column="3" Grid.ColumnSpan="2"><Run Language="es-es" Text="Platos"/></TextBlock>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="50,42,0,0" TextWrapping="Wrap" Text="Busqueda" VerticalAlignment="Top" Width="120" Grid.Column="6" TextChanged="TextBox_TextChanged"/>
        <TextBlock 
            Foreground="#FF313131" FontWeight="Bold" FontSize="14"
            VerticalAlignment="Top" HorizontalAlignment="Left" FontFamily="Gabriola" Margin="10,69,0,0" Height="68" Width="130" Grid.Row="7" Grid.ColumnSpan="2"><Run Text="900 730 222"/><LineBreak/><Run Text="Horario: De L a V de 9:00 a 20:00."/><LineBreak/><Run Text="sistema@Gestion.com"/></TextBlock>
        <TextBlock 
            Foreground="#FF313131" FontWeight="Bold" FontSize="16"
            VerticalAlignment="Top" HorizontalAlignment="Left" FontFamily="Gabriola" Margin="82,126,0,0" Height="21" Width="296" Grid.Column="2" Grid.Row="7" Text="© 2025  International Group. All Rights reserved." Grid.ColumnSpan="4"/>
    </Grid>
</Window>
